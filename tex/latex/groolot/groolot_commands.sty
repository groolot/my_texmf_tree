%###########################################
%   Commande de facilitation d'insertion
%   de figures numerotees
%###########################################
\newcommand{\image}[5][\textwidth]{%
% #1 = largeur de la minipage
% #2 = nom de fichier de l'image a incruster
% #3 = includegraphics options
% #4 = le texte du caption
% #5 = label de l'element
    \begin{figure}
        \centering
            \begin{minipage}[c]{#1}
                \centering
                \includegraphics[#3]{#2}
                \caption{#4}
                \label{#5}
            \end{minipage}
    \end{figure}
}
\newcommand{\imageBoxed}[5][\textwidth]{%
% #1 = largeur de la minipage
% #2 = nom de fichier de l'image a incruster
% #3 = includegraphics options
% #4 = le texte du caption
% #5 = label de l'element
    \begin{figure}
        \centering
        \fbox{
            \begin{minipage}[c]{#1}
                \centering
                \includegraphics[#3]{#2}
                \caption{#4}
                \label{#5}
            \end{minipage}
        }
    \end{figure}
    %\afterpage{\clearpage}
}


%###########################################
% Commande de facilitation d'insertion
% de tableaux numerotes
%###########################################
\newcommand{\tableau}[4]{%
% #1 = parametres des colonnes
% #2 = contenu du tableau
% #3 = le texte du caption
% #4 = label de l'element
    \begin{table}
        \centering
        \begin{tabular}{#1}
            #2
        \end{tabular}
        \caption{#3}
        \label{#4}
    \end{table}
    %\afterpage{\clearpage}
}

\newcommand{\tableauSized}[5]{%
% #1 = parametres des colonnes
% #2 = contenu du tableau
% #3 = le texte du caption
% #4 = label de l'element
% #5 = largeur du tableau final
    \begin{table}
        \centering
        \resizebox{#5}{!} {
          \begin{tabular}{#1}
              #2
          \end{tabular}
        }
        \caption{#3}
        \label{#4}
    \end{table}
    %\afterpage{\clearpage}
}

