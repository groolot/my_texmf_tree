\usepackage{xlop}
\newcommand{\DivisionEuclidienneSuccessive}[2]{
    \newif\ifcontinue
    \newcount\divrank
    \divrank=0%
    \opcopy{#1}{dividende}%
    \opcopy{#2}{diviseur}%
    \continuetrue
    \whiledo{\boolean{continue}}{
        \continuefalse%
        \opidiv*{dividende}{diviseur}{quotient}{reste}%
        \par$ \opprint{dividende} = \opprint{diviseur} \times \opprint{quotient} + \opprint{reste} $
        \opcopy{quotient}{dividende}
        \advance\divrank by1
        \opcmp{dividende}{0}%
        \ifopgt \continuetrue \fi
    }
}


